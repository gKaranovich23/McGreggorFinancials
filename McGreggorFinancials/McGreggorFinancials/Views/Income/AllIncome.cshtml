@model IncomeListViewModel

@{
    ViewData["Title"] = "AllIncome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <header class="content__title">
        <h1>All Income</h1>
    </header>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th class="text-left">ID</th>
                            <th>Description</th>
                            <th class="text-center">Amount</th>
                            <th class="text-center">Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var e in Model.Incomes)
                        {
                            <tr>
                                <td class="text-left">@e.ID</td>
                                <td>@e.Description</td>
                                <td class="text-center">$@e.Amount</td>
                                <td class="text-center">@e.Date.ToString("MM/dd/yyyy")</td>
                                <td class="text-center">
                                    <form asp-action="Delete" method="post">
                                        <a asp-action="Edit"
                                           asp-route-incomeId="@e.ID">
                                            Edit
                                        </a>
                                        |
                                        <input type="hidden" name="incomeId" value="@e.ID" />
                                        <button typeof="submit" class="btn-delete--expense">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                </div>
</div>
</div>