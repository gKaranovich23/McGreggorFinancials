@model DonationsListViewModel

@{
    ViewData["Title"] = "FiveYRReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>5YR Donations Report</h1>
</header>

<div class="row">
    <div class="col-sm-6">
        <div class="card card-lg">
            <div class="card-body">
                <h4 class="card-title">5YR Donations</h4>
                <div id="exLine_chart" class="chart"></div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card card-lg">
            <div class="card-body">
                <h4 class="card-title">% By Charity</h4>
                <h6 class="card-subtitle"></h6>
                <div id="exCat_chart" class="chart"></div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th class="text-left">ID</th>
                        <th>Description</th>
                        <th class="text-center">Amount</th>
                        <th class="text-center">Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model.Donations)
                    {
                        <tr>
                            <td class="text-left">@e.ID</td>
                            <td>@e.Description</td>
                            <td class="text-center">$@e.Amount</td>
                            <td class="text-center">@e.Date.ToString("MM/dd/yyyy")</td>
                            <td class="text-center">
                                <form asp-action="Delete" method="post">
                                    <a asp-action="Edit"
                                       asp-route-donationId="@e.ID">
                                        Edit
                                    </a>
                                    |
                                    <input type="hidden" name="donationId" value="@e.ID" />
                                    <button typeof="submit" class="btn-delete--expense">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        google.charts.load('visualization', '1', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawLineChart);
        google.charts.setOnLoadCallback(drawPieChart);

        function drawLineChart() {
            var modelData = @Html.Raw(Json.Serialize(Model.LineChartData));
            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Year');
            data.addColumn('number', 'Donations');

            for (var i = 0; i < $(modelData).length; i++) {
                data.addRows([
                    [modelData[i].xData, Number(modelData[i].yData)]
                ]);
            }

            // Set chart options
            var options = {
                backgroundColor: 'transparent',
                hAxis: {
                    title: 'Year',
                    titleColor: '#fff',
                    gridlines: { color: '#808080' },
                    baselineColor: '#fff',
                    textStyle: {color: '#fff'}
                },
                vAxis: {
                    title: 'Donation Total',
                    titleColor: '#fff',
                    gridlines: { color: '#808080' },
                    minorGridlines: {color: '#808080'},
                    baselineColor: '#808080',
                    textStyle: {color: '#fff'}
                },
                legend: {
                    textStyle: {color: '#fff'}
                }
            };

            var chart = new google.visualization.LineChart(document.getElementById('exLine_chart'));
            chart.draw(data, options);
        }

        function drawPieChart() {
            var modelData = @Html.Raw(Json.Serialize(Model.PieChartData));

            var data = new google.visualization.DataTable();
            data.addColumn('string', 'Charity');
            data.addColumn('number', '% of Charities');

            for (var i = 0; i < $(modelData).length; i++) {
                data.addRows([
                    [modelData[i].category, Number(modelData[i].data)]
                ]);
            }

            // Set chart options
            var options = {
                backgroundColor:'transparent',
                legend: {
                    textStyle: {color: '#fff'}
                }
            };

            var chart = new google.visualization.PieChart(document.getElementById('exCat_chart'));
            chart.draw(data, options);
        }

        function resizeCharts() {
            $('.chart').width('100%');
        }

        $(window).resize(function () {
            drawPieChart();
            drawLineChart();
        });

    </script>
}
