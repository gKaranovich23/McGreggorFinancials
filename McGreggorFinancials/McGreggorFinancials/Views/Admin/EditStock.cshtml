@model StockFormViewModel
@{
    ViewData["Title"] = "EditStock";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>@ViewBag.FormTitle</h1>
</header>
<hr />
<form asp-action="EditStock">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Stock.ID" />
    <div class="form-group">
        <span asp-validation-for="Stock.Sector" class="text-danger"></span>
        <label asp-for="Stock.SectorID" class="control-label"></label>
        <select asp-for="Stock.SectorID" asp-items="Model.Sectors" class="form-control">
            <option>Please select a sector</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Stock.Company" class="control-label"></label>
        <input asp-for="Stock.Company" class="form-control" />
        <span asp-validation-for="Stock.Company" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stock.Ticker" class="control-label"></label>
        <input asp-for="Stock.Ticker" class="form-control" />
        <span asp-validation-for="Stock.Ticker" class="text-danger"></span>
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Stocks" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}