@model PaymentMethod
@{
    ViewData["Title"] = "EditPaymentMethod";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>@ViewBag.FormTitle</h1>
</header>
<hr />
<form asp-action="EditPaymentMethod">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="Method" class="control-label"></label>
        <textarea asp-for="Method" class="form-control"></textarea>
        <span asp-validation-for="Method" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsCredit" class="control-label"></label>
        <input type="checkbox" asp-for="IsCredit" class="form-control" />
        <span asp-validation-for="IsCredit" class="text-danger"></span>
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="PaymentMethods" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}