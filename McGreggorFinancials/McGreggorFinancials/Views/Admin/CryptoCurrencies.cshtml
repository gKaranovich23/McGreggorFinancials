@model IEnumerable<CryptoCurrency>

@{
    ViewData["Title"] = "CryptoCurrencies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>CryptoCurrencies</h1>
</header>

<a asp-action="CreateCryptoCurrency" class="btn btn-primary btn-add--expense">Add Crypto Currency</a>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ID)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ticker)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ticker)
                            </td>
                            <td>
                                <a asp-action="EditCryptoCurrency"
                                   asp-route-id="@item.ID">
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>