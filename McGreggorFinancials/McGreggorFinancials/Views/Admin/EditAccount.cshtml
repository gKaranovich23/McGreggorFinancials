@model AccountFormViewModel
@{
    ViewData["Title"] = "EditAccount";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>@ViewBag.FormTitle</h1>
</header>
<hr />
<form asp-action="EditAccount">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Account.ID" />
    <div class="form-group">
        <span asp-validation-for="Account.TargetID" class="text-danger"></span>
        <label asp-for="Account.TargetID" class="control-label"></label>
        <select asp-for="Account.TargetID" asp-items="Model.TargetTypes" class="form-control">
            <option>Please select a goal type</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Account.Type" class="text-danger"></span>
        <label asp-for="Account.TypeID" class="control-label"></label>
        <select asp-for="Account.TypeID" asp-items="Model.AccountTypes" class="form-control">
            <option>Please select a savings type</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Account.Amount" class="control-label"></label>
        <input asp-for="Account.Amount" class="form-control" />
        <span asp-validation-for="Account.Amount" class="text-danger"></span>
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Savings" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}