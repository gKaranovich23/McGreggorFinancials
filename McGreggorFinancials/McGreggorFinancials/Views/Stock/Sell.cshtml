@model ShareFormViewModel

@{
    ViewData["Title"] = "Sell";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="content__title">
    <h1>Sell @Model.Share.Stock.Company</h1>
</header>

<hr />
<form asp-action="Sell">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Share.ID" />
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <span asp-validation-for="Share.StockID" class="text-danger"></span>
        <label asp-for="Share.StockID" class="control-label"></label>
        <select asp-for="Share.StockID" asp-items="Model.Stocks" class="form-control" disabled>
            <option>Please select a stock</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Share.NumOfShares" class="control-label"></label>
        <input asp-for="Share.NumOfShares" class="form-control" />
        <span asp-validation-for="Share.NumOfShares" class="text-danger"></span>
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="@Model.ReturnUrl" class="btn btn-default">Cancel</a>
    </div>
</form>