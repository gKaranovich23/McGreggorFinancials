@model CoinFormViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="content__title">
    <h1>@ViewBag.FormTitle</h1>
</header>
<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Coin.ID" />
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <span asp-validation-for="Coin.CryptoCurrencyID" class="text-danger"></span>
        <label asp-for="Coin.CryptoCurrencyID" class="control-label"></label>
        <select asp-for="Coin.CryptoCurrencyID" asp-items="Model.CryptoCurrencies" class="form-control">
            <option>Please select a stock</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Coin.NumOfCoins" class="control-label"></label>
        <input asp-for="Coin.NumOfCoins" class="form-control" />
        <span asp-validation-for="Coin.NumOfCoins" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Coin.PurchasePrice" class="control-label"></label>
        <input asp-for="Coin.PurchasePrice" class="form-control" />
        <span asp-validation-for="Coin.PurchasePrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Coin.Date" class="control-label"></label>
        <input asp-for="Coin.Date" type="text" class="form-control datepicker" />
        <span asp-validation-for="Coin.Date" class="text-danger"></span>
    </div>
    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="@Model.ReturnUrl" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        $('.datepicker').datepicker();
    </script>
}